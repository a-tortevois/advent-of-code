{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": [
      ".git",
      ".cache",
      ".vscode",
      "solve-2022/22-tests.js"
    ]
  },
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 200,
    "attributePosition": "multiline"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}